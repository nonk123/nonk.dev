{
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "Lua.workspace.library": ["_sanity.lua"],
    "files.exclude": {
        "dist": true
    },
    "files.associations": {
        "**/blog/md/*.txt": "html"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[jinja-html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}
