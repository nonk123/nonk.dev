{% import "_icons.html" as icons %}

{% macro link(icon, title, href, blank = True) %}
<li>
    {% if icon -%}
        {{ icon }}
    {%- else -%}
        {{ icons.fa("globe") }}
    {%- endif %}
    <a rel="me" href="{{ href }}" {% if blank -%}target="_blank"{%- endif %}>
        {{- title -}}
    </a>
</li>
{% endmacro %}

