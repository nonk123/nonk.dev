{% extends "_base.html" %}

{% block what %}{{ title }}{% endblock %}
{% block description %}An article from nonk's blog. Click to read more.{% endblock %}
{% block url %}/blog/{{ id }}{% endblock %}
{% block og_type %}article{% endblock %}

{% block head %}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": "{{ title }}",
    "name": "{{ title }}",
    "description": "an article from my blog",
    "datePublished": "{{ date_pub }}",
    "dateModified": "{{ date_mod }}"
}
</script>
{% endblock %}

{% block content %}
<div style="width: 100%; display: flex; flex-flow: row nowrap; justify-content: space-between;">
    <h1 class="blog">{{ title }}</h1>
    <p style="margin: 0; text-align: right; font-size: 0.8em;">Posted: <strong>{{ date_pub }}</strong></p>
</div>

{% for paragraph in paragraphs %}
<p>{{ paragraph|safe }}</p>
{% endfor %}

<p>Articles:</p>
<ul class="links">
    {% for id, article in all_articles|items %}
    <li><a href="/blog/{{ id }}">{{ article.title }}</a></li>
    {% endfor %}
</ul>
{% endblock %}
