{% extends "_base.html" %}

{% block what %}projects{% endblock %}
{% block description %}the list of projects i have created and maintained.{% endblock %}
{% block url %}/projects{% endblock %}

{% block head %}
<link rel="stylesheet" href="/projects/style.css">
{% endblock %}

{% block content %}
<h1>my projects</h1>
<p>click the icons/headings for more info!</p>

{% for project in projects %}
<section class="project w100 row al-center">
    <a target="_blank" rel="nofollow" class="icon" href="{{ project.url }}" aria-hidden="true">
        <img class="icon{% if project.icon and project.icon.smooth %} smooth{% endif %}"
             src="/projects/icons/{% if project.icon %}{{ project.icon.path }}{% else %}null.png{% endif %}"
             alt="{% if project.icon %}{{ project.icon.alt }}{% else %}'No icon' in poor handwriting{% endif %}">
    </a>
    <div class="description">
        <h2 {% if project.id %}id="{{ project.id }}"{% endif %}>
            <a target="_blank" rel="nofollow" href="{{ project.url }}">{{ project.title }}</a>
        </h2>
        <p>{{ project.description | safe }}</p>
    </div>
</section>
{% endfor %}
{% endblock %}
